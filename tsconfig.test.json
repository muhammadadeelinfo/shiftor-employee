{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@hooks/*": ["src/shared/hooks/*"],
      "@lib/*": ["src/lib/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "tmp-test"
  },
  "include": [
    "src/lib/shiftConfirmationStatus.ts",
    "src/shared/utils/timeUtils.ts",
    "src/shared/utils/shiftPhase.ts",
    "src/shared/utils/notificationUtils.ts",
    "src/shared/utils/mapUrl.ts",
    "src/shared/utils/runtimeHealthUtils.ts",
    "tests/timeUtils.test.ts",
    "tests/shiftPhase.test.ts",
    "tests/notificationUtils.test.ts",
    "tests/maps.test.ts",
    "tests/shiftConfirmationStatus.test.ts",
    "tests/runtimeHealthUtils.test.ts"
  ]
}
